#!/usr/bin/python3
import os
from pathlib import Path

PACKAGES = "libxpm-dev libgif-dev libjpeg-dev libpng-dev libtiff-dev libx11-dev libncurses5-dev automake autoconf texinfo libgtk2.0-dev libmagickwand-dev libgnutls28-dev gcc-10 g++-10 libgccjit0 libgccjit-10-dev libjansson4 libjansson-dev redshift redshift-gtk unclutter llvm git cmake ripgrep pass webext-browserpass mpv isync htop g++ xdotool figlet shellcheck pipenv fd-find python3-pytest python-pytest libtool-bin isort clangd-11 texlive-latex-base texlive-latex-extra texlive-latex-recommended sqlite3 clangd-11"

APT_DOWNLOAD = "apt download "
DOWNLOAD_LOC = str(Path.home()) + "/.local/share/packages/debs"
Path(DOWNLOAD_LOC).mkdir(exist_ok=True)
os.chdir(DOWNLOAD_LOC)

for package in PACKAGES.split():
    os.system(APT_DOWNLOAD + package)
